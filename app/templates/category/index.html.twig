{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.category_list'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.category_list'|trans }}</h1>
    <div class="link-space-between">
        <a href="{{ url('main_index') }}" title="{{ 'main.link'|trans }}">{{ 'main.link'|trans }}</a>
        <a href="{{ url('category_create') }}" title="{{ 'create.category'|trans }}">{{ 'create.category'|trans }}</a>
    </div>
    {% if pagination is defined and pagination.items|length %}
        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ knp_pagination_sortable(pagination, 'category.id'|trans, 'category.id') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.category_name'|trans, 'category.name') }}</th>
                <th scope="col">
                    {{ 'label.actions'|trans }}
                </th>
            </tr>
            </thead>
            <tbody>
            {% for category in pagination.items %}
                <tr>
                    <td>{{ category.id }}</td>
                    <td>{{ category.name }}</td>
                    <td>
                        <a href="{{ url('category_show', {'id': category.id}) }}" title="{{ 'show.category'|trans }}">{{ 'show.category'|trans }}</a>
                        <a href="{{ url('category_edit', {'id': category.id}) }}" title="{{ 'edit.category'|trans }}">{{ 'edit.category'|trans }}</a>
                        <a href="{{ url('category_delete', {'id': category.id}) }}" title="{{ 'delete.category'|trans }}">{{ 'delete.category'|trans }}</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>
    {% else %}
        <p>
            {{ 'message.no_data'|trans }}
        </p>
    {% endif %}
    <div class="link-centered">
        <a href="{{ url('event_index') }}" title="{{ 'events.link'|trans }}">{{ 'events.link'|trans }}</a>
        <a href="{{ url('contact_index') }}" title="{{ 'contacts.link'|trans }}">{{ 'contacts.link'|trans }}</a>
        <a href="{{ url('user_index') }}" title="{{ 'users.link'|trans }}">{{ 'users.link'|trans }}</a>
        <a href="{{ url('tag_index') }}" title="{{ 'tags.link'|trans }}">{{ 'tags.link'|trans }}</a>
    </div>
{% endblock  %}