{% extends 'base.html.twig' %}

{% block title %}
    {{ 'edit.user'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'edit.user'|trans }}</h1>
    <div class="link-space-between">
        <a href="{{ url('main_index') }}" title="{{ 'main.link'|trans }}">{{ 'main.link'|trans }}</a>
    </div>
    <div class="flex-column">
        <a href="{{ url('settings_edit', {'id': app.user.id}) }}" title="{{ 'edit.user_data'|trans }}">{{ 'edit.user_data'|trans }}</a>
        <a href="{{ url('settings_change_password', {'id': app.user.id}) }}" title="{{ 'edit.user_change_password'|trans }}">{{ 'edit.user_change_password'|trans }}</a>
    </div>

    <div class="flex-column links-container hidden">
        <a href="{{ url('event_index') }}" title="{{ 'events.link'|trans }}">{{ 'events.link'|trans }}</a>
        <a href="{{ url('contact_index') }}" title="{{ 'contacts.link'|trans }}">{{ 'contacts.link'|trans }}</a>
        {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ url('contact_index') }}" title="{{ 'contacts.link'|trans }}">{{ 'contacts.link'|trans }}</a>
        <a href="{{ url('category_index') }}" title="{{ 'categories.link'|trans }}">{{ 'categories.link'|trans }}</a>
        <a href="{{ url('tag_index') }}" title="{{ 'tags.link'|trans }}">{{ 'tags.link'|trans }}</a>
        <a href="{{ url('user_index') }}" title="{{ 'users.link'|trans }}">{{ 'users.link'|trans }}</a>
        {% endif %}
    </div>
{% endblock %}