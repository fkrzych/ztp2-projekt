{% extends 'base.html.twig' %}

{% block title %}
    {{ 'edit.user_change_password'|trans({'%id%': app.user.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'edit.user_change_password'|trans({'%id%': app.user.id|default('')}) }}</h1>
    {{ form_start(form) }}
    {{ form_widget(form) }}
    <div class="form-group row float-sm-right">
        <input type="submit" value="{{ 'action.save'|trans }}" class="btn btn-primary"/>
    </div>
    <div class="form-group row float-sm-left">
        <a href="{{ url('settings_index', {'id': app.user.id}) }}" title="{{ 'edit.user'|trans}}">{{ 'edit.user'|trans}}</a>
    </div>
    {{ form_end(form) }}
{% endblock %}